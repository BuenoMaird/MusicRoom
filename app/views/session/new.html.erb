

<% if (@user.errors.any?) %>
  <ol>
    <%= @user.errors.full_messages.each do |msg| %>
      <li>msg</li>
    <% end %>
  </ol>
<% end %>

<%= form_tag '/login' do %>

  <p>
    <%= label_tag 'username' %>
    <%= text_field_tag 'username' %>
  </p>

  <p>
    <%= label_tag 'password' %>
    <%= password_field_tag 'password' %>
  </p>

  <p>
    <%= submit_tag 'Login' %>
  </p>

<% end %>


