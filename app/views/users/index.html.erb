<h2>Users</h2>

<% @user.each do |u| %>

  <ul>
    <li><%= link_to(u.name, u) %></li>
  </ul>

  <% @user.each_with_index do |user, index| %>
    <tr>
      <td><%= index +=1 %></td>
      <td><%= user.name %></td>
      <td>
        <%= link_to "Send Message", discussions_path, class: "btn btn-success btn-xs start-discussion",
                    "data-sid" => @current_user.id, "data-rip" => user.id %>
      </td>
    </tr>
<% end %>

<% end %>


